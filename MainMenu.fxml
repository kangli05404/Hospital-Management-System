<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>


<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="HospitalManagementSystem.MainMenuController">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">

			<top>
				<HBox fx:id="header" prefHeight="71.0" prefWidth="792.0"
					style="-fx-background-color: #52438F;" BorderPane.alignment="CENTER">
					<children>
						<VBox alignment="CENTER" spacing="5" translateX="100">
							<Label
								style="-fx-font-weight: bold; -fx-font-size: 26px; -fx-font-family: 'Segoe UI';"
								text="Welcome to Hospital Management System (HMS)" textFill="#efecec">

							</Label>

							<Label fx:id="timeLabel" translateX="-10"
								style=" -fx-font-size: 22px; -fx-font-family: 'Times New Roman';"
								textFill="WHITE">
							</Label>
						</VBox>
					</children>
				</HBox>
			</top>

			<left>
				<VBox prefWidth="280.0" spacing="6"
					style="-fx-background-color: #7D6CC8;">
					<!-- Menu as text only -->
					<Label style="-fx-font-size: 25; -fx-font-weight: bold;"
						text="1) Doctor" textFill="WHITE" translateX="20" />
					<Label style="-fx-font-size: 25; -fx-font-weight: bold;"
						text="2) Patient" textFill="WHITE" translateX="20" />
					<Label style="-fx-font-size: 25; -fx-font-weight: bold;"
						text="3) Medicine" textFill="WHITE" translateX="20" />
					<Label style="-fx-font-size: 25; -fx-font-weight: bold;"
						text="4) Laboratory" textFill="WHITE" translateX="20" />
					<Label style="-fx-font-size: 25; -fx-font-weight: bold;"
						text="5) Facility" textFill="WHITE" translateX="20" />
					<Label style="-fx-font-size: 25; -fx-font-weight: bold;"
						text="6) Staff" textFill="WHITE" translateX="20" />

					<Separator>
						<VBox.margin>
							<Insets top="30" />
						</VBox.margin>
					</Separator>

					<Label style="-fx-font-size: 20;" text="Enter selection (1-6 or name):"
						textFill="WHITE" translateX="10" />
					<HBox spacing="6">
						<TextField fx:id="menuInputField" promptText="e.g. 1 or doctor"
							translateX="10" />
						<Button fx:id="menuGoBtn" text="Enter" translateX="20" />
					</HBox>
				</VBox>
			</left>

			<center>
				<StackPane fx:id="outputPane" prefHeight="353.0"
					prefWidth="512.0" BorderPane.alignment="CENTER">
					<VBox fx:id="WelcomeImg" alignment="CENTER" spacing="10">
						<ImageView fitWidth="480" preserveRatio="true">
							<image>
								<Image url="@hospital.jpg" />
							</image>
						</ImageView>
						<Label fx:id="welcomeLabel" style="-fx-font-size: 18; -fx-text-fill: #333;"
							text="Hospital Management System" />
					</VBox>

				</StackPane>
			</center>

		</BorderPane>
	</children>
</AnchorPane>
