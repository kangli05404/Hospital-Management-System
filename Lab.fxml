<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">

	<top>
		<HBox alignment="CENTER">
			<padding>
				<Insets top="30" />
			</padding>
			<Label text="Laboratory" style="-fx-font-size: 30px; -fx-font-weight: bold;" />
		</HBox>
	</top>

	<center>
		<VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">

			<GridPane hgap="10" vgap="10" alignment="CENTER">
				<Label text="Facility:" GridPane.rowIndex="0"
					GridPane.columnIndex="0" />
				<TextField fx:id="facilityField" GridPane.rowIndex="0"
					GridPane.columnIndex="1" promptText="e.g. X-Ray" prefWidth="200" />

				<Label text="Cost:" GridPane.rowIndex="1"
					GridPane.columnIndex="0" />
				<TextField fx:id="labCostField" GridPane.rowIndex="1"
					GridPane.columnIndex="1" />
			</GridPane>

			<HBox spacing="10" alignment="CENTER" style="-fx-padding: 130 0 0 0;">
				<VBox.margin>
					<Insets top="15" />
				</VBox.margin>
				<Button text="Add / Save Lab" onAction="#saveLab" fx:id="saveButton" />
				<Button text="Show Labs" onAction="#showLab" fx:id="showButton" />
				<Button fx:id="exitButton" text="Exit" onAction="#handleExit" />
			</HBox>


		</VBox>
	</center>

</BorderPane>
