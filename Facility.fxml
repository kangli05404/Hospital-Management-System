<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">

	<top>
		<HBox alignment="CENTER">
			<padding>
				<Insets top="30" />
			</padding>
			<Label text="Facility" style="-fx-font-size: 30px; -fx-font-weight: bold;" />
		</HBox>
	</top>

	<center>
		<VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">

			<!-- Form -->
			<GridPane hgap="10" vgap="10" alignment="CENTER">
				<Label text="Facility:" GridPane.rowIndex="0"
					GridPane.columnIndex="0" />
				<TextField fx:id="facilityNameField" GridPane.rowIndex="0"
					GridPane.columnIndex="1" prefWidth="200" />
			</GridPane>

			<!-- Buttons below form -->
			<HBox spacing="10" alignment="CENTER" style="-fx-padding: 170 0 0 0;">
				<VBox.margin>
					<Insets top="15" />
				</VBox.margin>
				<Button text="Add / Save Facility" onAction="#saveFacility"
					fx:id="saveButton" />
				<Button text="Show Facilities" onAction="#showFacility"
					fx:id="showButton" />
				<Button text="Exit" onAction="#handleExit" fx:id="exitButton" />
			</HBox>

		</VBox>
	</center>

</BorderPane>
